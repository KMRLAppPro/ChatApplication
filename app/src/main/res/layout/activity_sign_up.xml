<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/edt_signuptext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_text_connect"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hey, Sign Up here !!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/edt_text_connect"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="connect"
        android:layout_below="@id/app_logo"
        android:textAlignment="center"
        android:textColor="@color/kmrllightgreen"
        android:textSize="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_bold" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edt_signuptext"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edt_background"
        android:fontFamily="@font/poppins_black"
        android:hint="Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/edt_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edt_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edt_background"
        android:fontFamily="@font/poppins_black"
        android:hint="Phone Number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/edt_emailid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edt_phonenumber"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edt_background"
        android:fontFamily="@font/poppins_black"
        android:hint="Email ID"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edt_emailid"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_black"
        android:background="@drawable/edt_background"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <EditText
        android:id="@+id/edt_conpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edt_pass"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edt_background"
        android:fontFamily="@font/poppins_black"
        android:hint="Confirm Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_below="@id/edt_conpass"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/poppins_semibold"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/edt_text_account"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/btnSignUp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="10dp"
        android:text="Already have an account ?"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <Button
        android:id="@+id/btnlog"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/btnSignUp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/poppins_semibold"
        android:padding="5dp"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="11dp" />
</RelativeLayout>