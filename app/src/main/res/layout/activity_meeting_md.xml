<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeetingMD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/meeting_heading"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:text="Request an Appointment"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="19dp"
            android:paddingLeft="30dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_arrow_back" />

        <TextView
            android:id="@+id/md_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mdcontent1"
            android:layout_below="@id/meeting_heading"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="10dp"
            android:background="@drawable/text_bg"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>