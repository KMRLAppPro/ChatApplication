<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/edt_text_connect"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="connect"
        android:layout_below="@id/app_logo"
        android:textAlignment="center"
        android:textColor="@color/kmrllightgreen"
        android:textSize="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_bold" />

    <TextView
        android:id="@+id/edt_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login to Enjoy the Perks !"
        android:layout_below="@id/edt_text_connect"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_semibold" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edt_text"
        android:layout_marginTop="10dp"
        android:hint="Email ID"
        android:textSize="13dp"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edt_background"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edt_email"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textSize="13dp"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edt_background"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginVertical="50dp"
        android:layout_below="@id/edt_password"
        android:text="Log In"
        android:background="@drawable/btn_background"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/edt_text_or"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Or"
        android:layout_below="@id/btnLogin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold" />

    <TextView
        android:id="@+id/edt_text_account"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Don't have an account ?"
        android:paddingTop="10dp"
        android:layout_below="@id/edt_text_or"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_semibold" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/edt_text_or"
        android:text="Sign Up"
        android:layout_marginLeft="215dp"
        android:padding="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/btn_background"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:layout_marginTop="5dp" />
</RelativeLayout>